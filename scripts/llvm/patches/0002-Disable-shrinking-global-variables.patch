Subject: [PATCH] Disable shrinking global variables

---
 llvm/lib/Transforms/IPO/GlobalOpt.cpp | 22 +++++++++++-----------
 1 file changed, 11 insertions(+), 11 deletions(-)

diff --git a/llvm/lib/Transforms/IPO/GlobalOpt.cpp b/llvm/lib/Transforms/IPO/GlobalOpt.cpp
index 9524d9a36204..eea03bcbc4e8 100644
--- a/llvm/lib/Transforms/IPO/GlobalOpt.cpp
+++ b/llvm/lib/Transforms/IPO/GlobalOpt.cpp
@@ -2068,20 +2068,20 @@ processInternalGlobal(GlobalVariable *GV, const GlobalStatus &GS,
 
     // Try to optimize globals based on the knowledge that only one value
     // (besides its initializer) is ever stored to the global.
-    if (optimizeOnceStoredGlobal(GV, GS.StoredOnceValue, GS.Ordering, DL,
-                                 GetTLI))
-      return true;
+    // if (optimizeOnceStoredGlobal(GV, GS.StoredOnceValue, GS.Ordering, DL,
+    //                              GetTLI))
+    //   return true;
 
     // Otherwise, if the global was not a boolean, we can shrink it to be a
     // boolean.
-    if (Constant *SOVConstant = dyn_cast<Constant>(GS.StoredOnceValue)) {
-      if (GS.Ordering == AtomicOrdering::NotAtomic) {
-        if (TryToShrinkGlobalToBoolean(GV, SOVConstant)) {
-          ++NumShrunkToBool;
-          return true;
-        }
-      }
-    }
+    // if (Constant *SOVConstant = dyn_cast<Constant>(GS.StoredOnceValue)) {
+    //   if (GS.Ordering == AtomicOrdering::NotAtomic) {
+    //     if (TryToShrinkGlobalToBoolean(GV, SOVConstant)) {
+    //       ++NumShrunkToBool;
+    //       return true;
+    //     }
+    //   }
+    // }
   }
 
   return false;
